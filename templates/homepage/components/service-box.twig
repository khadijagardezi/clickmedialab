{% set image = alias('@web') ~ '/frame_img.webp' %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid py-2">
  <div class="row">
    <!-- Funnel Image (not fixed, just for this section) -->
    <div class="col-lg-2 d-none d-lg-flex align-items-start justify-content-center">
      <img src="{{image}}" alt="Funnel" style="height: 80vh;">
    </div>
    <!-- Service Table -->
    <div class="col-lg-10 col-12">
      <div class="d-flex flex-column gap-4">
        <!-- Repeat this block for each row/box -->
        <div class="funnel-box p-2">
          <div class="row align-items-center">
            <!-- Heading -->
            <div class="col-lg-3 col-12 fw-bold text-center mb-3 d-flex align-items-center justify-content-center">
              Website Design & Development
            </div>
            <!-- Chips Column 1 -->
            <div class="col-lg-4 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">UI UX Design Services <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Website Development <i class="bi bi-arrow-right"></i></span>
            </div>
            <!-- Chips Column 2 -->
            <div class="col-lg-5 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Landing Page Design <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Chatbot Integration <i class="bi bi-arrow-right"></i></span>
            </div>
          </div>
        </div>
        <!-- Box 2 -->
        <div class="funnel-box p-2">
          <div class="row align-items-center">
            <div class="col-lg-3 col-12 fw-bold text-center mb-3 d-flex align-items-center justify-content-center">
              Drive Website Traffic
            </div>
            <div class="col-lg-4 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">SEO Services <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Local SEO Service <i class="bi bi-arrow-right"></i></span>
            </div>
            <div class="col-lg-5 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Ecommerce SEO Services <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Content Marketing Services <i class="bi bi-arrow-right"></i></span>
            </div>
          </div>
        </div>
        <!-- Box 3 -->
        <div class="funnel-box p-2">
          <div class="row align-items-center">
            <div class="col-lg-3 col-12 fw-bold text-center mb-3 d-flex align-items-center justify-content-center">
              Attract Clients To Your Website<br>Through Ad Campaigns
            </div>
            <div class="col-lg-4 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Social Media Advertising <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Paid Ads Management <i class="bi bi-arrow-right"></i></span>
            </div>
            <div class="col-lg-5 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Lead Generation Campaigns <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">CRO <i class="bi bi-arrow-right"></i></span>
            </div>
          </div>
        </div>
        <!-- Box 4 -->
        <div class="funnel-box p-2">
          <div class="row align-items-center">
            <div class="col-lg-3 col-12 fw-bold text-center mb-3 d-flex align-items-center justify-content-center">
              Marketing Data Analysis
            </div>
            <div class="col-lg-4 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Website Traffic Tracking <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Ongoing Performance Reporting <i class="bi bi-arrow-right"></i></span>
            </div>
            <div class="col-lg-5 col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-lg-start">
              <span class="funnel-chip">Advanced Analytics <i class="bi bi-arrow-right"></i></span>
              <span class="funnel-chip">Upselling Opportunities <i class="bi bi-arrow-right"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
