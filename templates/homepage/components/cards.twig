{% for pack in packs %}
  {% set isEven = loop.index0 is even %}
  <section class="{{ loop.index0 % 2 ? 'bg-light' : '' }} py-5">
    <div class="container">
      <div class="row align-items-center">
        {# Text column #}
        <div class="col-md-5 order-md-{{ isEven ? '1' : '2' }} mb-4 mb-md-0">
          {% if pack.stat is defined %}
            <h2 class="display-4 fw-bold">{{ pack.stat }}</h2>
            <p class="lead">{{ pack.statCopy }}</p>
          {% endif %}
          <h3 class="fw-bold">{{ pack.title }}</h3>
          {% if pack.copy %}
            <p>{{ pack.copy }}</p>
          {% endif %}
          {% if pack.button %}
            <a href="{{ pack.button.href }}"
               class="btn blu-btn py-2 px-5 mt-4">
              {{ pack.button.text }}
              <i class="bi bi-arrow-right ms-1"></i>
            </a>
          {% endif %}
        </div>

        {# Image column #}
        <div class="col-md-7 order-md-{{ isEven ? '1' : '2' }}">
          <div class="ratio ratio-16x9 rounded overflow-hidden">
            <img src="{{ pack.img }}"
                 alt="{{ pack.title }}"
                 class="img-fluid" style="object-fit: contain;">
          </div>
        </div>
      </div>
    </div>
  </section>
{% endfor %}

